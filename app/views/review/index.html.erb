<!DOCTYPE html>
<html>
 	<head>
    	<title>Health4All Auction Site</title>
    	<%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track' => true %>
    	<!-- <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> -->
    	<%= csrf_meta_tags %>
    	<!--[if lt IE 9]>
      		<script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      		</script>
    	<![endif]-->
  	</head>
  	<body>
  							<br/>
							<br/><br/>
							<br/><div style="text-align: center">
				<div style="display:inline-block;">
							
  		<a href="/review?view_style=line"><button type="button" class="btn btn-default">
								  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
								</button></a>
								<span>                    </span>
								<a href="/review?view_style=block"><button type="button" class="btn btn-default" aria-label="Left Align">
								  <span class="glyphicon glyphicon-th-large " aria-hidden="true"></span>
								</button></a>

							<span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Review Submission Panel</span>
				</div></div>
<br/>
							<br/>
		
	<% if @admin %>

			<% if @style == "block" %>
			<div class="center-box block-view" style="text-align: center;">
				 <% if @artworks.size == 0 %>
				 	There are no new artwork submissions at this time.
				 <% end %>
		     	 <% @artworks.each_slice(2) do |artwork1, artwork2| %> 

				  <div style="display: inline-block;">
				  			<div>
		       	 			<img src="<%= artwork1.attachment_url %>" class ="displayedreview" />
		       	 			</div>
		       	 			<br/>
		       	 			<div>
		            		<%= form_tag("/review/#{artwork1.id}", method: "put") do %>
							  <%= label_tag(:startingprice, "Starting Price") %>
							  <%= text_field_tag(:startingprice) %>
							  <%= label_tag(:autowinprice, "Autowin Price") %>
							  <%= text_field_tag(:autowinprice) %>
							  <%= label_tag(:month, "Month") %>
							  <%= select_tag :month, "<option>01</option><option>02</option><option>03</option><option>04</option><option>05</option><option>06</option><option>07</option><option>08</option><option>09</option><option>10</option><option>11</option><option>12</option>".html_safe %>
							  <%= label_tag(:day, "Day") %>
							  <%= select_tag :day, "<option>01</option><option>02</option><option>03</option><option>04</option><option>05</option><option>06</option><option>07</option><option>08</option><option>09</option><option>10</option><option>11</option><option>12</option><option>13</option><option>14</option><option>15</option><option>16</option><option>17</option><option>18</option><option>19</option><option>20</option><option>21</option><option>22</option><option>23</option><option>24</option><option>25</option><option>26</option><option>27</option><option>28</option><option>29</option><option>30</option><option>31</option>".html_safe %>
							  <%= label_tag(:hour, "Hour") %>
							  <%= select_tag :hour, "<option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option><option>11</option><option>12</option>".html_safe %>
							  <%= label_tag(:minute, "Minute") %>
							  <%= select_tag :minute, "<option>00</option><option>05</option><option>10</option><option>15</option><option>20</option><option>25</option><option>30</option><option>35</option><option>40</option><option>45</option><option>50</option><option>55</option>".html_safe %>
							  <%= label_tag(:ampm, "Time") %>
							  <%= select_tag :ampm, "<option>PM</option><option>AM</option>".html_safe %>
							  <%= label_tag(:duration, "Duration (minutes)") %>
							  <%= select_tag :duration, "<option>15</option><option>30</option><option>45</option><option>60</option><option>90</option><option>120</option><option>180</option><option>240</option><option>300</option><option>360</option>".html_safe %>
							  <%= submit_tag "Accept", class: "btn btn-success padded_button bid-btn"%>
							  <%= submit_tag "Reject", class: "btn btn-danger padded_button bid-btn"%>
							<% end %>
						</div>
		            	
						<% if artwork2 != nil %>

								<img src="<%= artwork2.attachment_url %>" class ="displayedreview" />
			            		<%= form_tag("/review/#{artwork2.id}", method: "put") do %>
								  <%= label_tag(:startingprice, "Starting Price") %>
								  <%= text_field_tag(:startingprice) %>
								  <%= label_tag(:autowinprice, "Autowin Price") %>
								  <%= text_field_tag(:autowinprice) %>
								  <%= submit_tag "Accept", class: "btn btn-success padded_button bid-btn"%>
								  <%= submit_tag "Reject", class: "btn btn-danger padded_button bid-btn"%>
								<% end %>

						<%end%>
		            </div>
		         
		         <% end %>

		     </div>
		    <% else %>
				<% @artworks.each do |artwork| %> 
				  <div class="div_box line-view">
					
						<div>
		       	 			<img src="<%= artwork.attachment_url %>" class ="displayedreview" />
		       	 			</div>
		       	 			<br/>
		       	 			<div>
		            		<%= form_tag("/review/#{artwork.id}", method: "put") do %>
							  <%= label_tag(:startingprice, "Starting Price") %>
							  <%= text_field_tag(:startingprice) %>
							  <%= label_tag(:autowinprice, "Autowin Price") %>
							  <%= text_field_tag(:autowinprice) %>
							  <%= submit_tag "Accept", class: "btn btn-success padded_button bid-btn"%>
							  <%= submit_tag "Reject", class: "btn btn-danger padded_button bid-btn"%>
							<% end %>
						</div>
				  </div>
				  <br/><br/>
				<% end %>
		    <% end %>

	
		
			
	<% else %>
		You are not authorized to view this page.
	<% end %>

  	</body>

 </html>
