<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, id: 'name', class: 'form-control' %>

      <%= f.label :phone %>
      <%= f.phone_field :phone, id: 'phone', class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, id: 'email', class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, id: 'password', class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, id: 'confirm', class: 'form-control' %>

      <%= f.submit "Create my account", id: 'signup_button', class: "btn btn-primary"
       %>
    <% end %>
  </div>
</div>
